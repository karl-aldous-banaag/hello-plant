void setup() {

    USE_SERIAL.begin(9600);

    USE_SERIAL.println();
    USE_SERIAL.println();
    USE_SERIAL.println();

    for(uint8_t t = 4; t > 0; t--) {
        USE_SERIAL.printf("[SETUP] WAIT %d...\n", t);
        USE_SERIAL.flush();
        delay(1000);
    }

    wifiMulti.addAP("WIFI_SSID", "WIFI_PASSWORD");

}

void loop() {
    // wait for WiFi connection
    if(Serial.available()){
		  String dataFromArduino = Serial.readString();
      dataFromArduino.trim();
      
      String temp = ""; // String for temperature
      String hum = ""; // String for humidity
      String moist = ""; //  String for moisture

      int fieldReading = 0;
      for (int i = 0; i < dataFromArduino.length(); i++) {
        if (dataFromArduino[i] == ',') {
          fieldReading += 1;
          continue;
        }

        if (dataFromArduino[i] == '\n') {
          break;
        }

        if (fieldReading == 0) {
          temp += dataFromArduino[i];
        } else if (fieldReading == 1) {
          hum += dataFromArduino[i];
        } else if (fieldReading == 2) {
          moist += dataFromArduino[i];
        }
      }

      Serial.print("Tempertarue: ");
      Serial.println(temp);
      Serial.print("Humidity: ");
      Serial.println(hum);
      Serial.print("Moisture: ");
      Serial.println(moist);

      if ((wifiMulti.run() == WL_CONNECTED)) {
        HTTPClient http;

        USE_SERIAL.print("[HTTP] begin...\n");
        // configure traged server and url
        String getURL = "https://docs.google.com/forms/u/3/d/e/FORM-ID/formResponse";
        Serial.println(getURL);
        http.begin(getURL); //HTTP
        http.addHeader("Content-Type", "application/x-www-form-urlencoded");

        USE_SERIAL.print("[HTTP] POST...\n");
        // start connection and send HTTP header
        String postBody = String("ENTRY.ID=") + temp + '&' + String("ENTRY.ID=") + hum + '&' + String("ENTRY.ID=") + moist;
        int httpCode = http.POST(postBody);

        // httpCode will be negative on error
        if(httpCode > 0) {
          // HTTP header has been send and Server response header has been handled
          USE_SERIAL.printf("[HTTP] POST... code: %d\n", httpCode);

          // file found at server
          if(httpCode == HTTP_CODE_OK) {
            Serial.println("Data sent!");
          }

          String htmlResponse = http.getString();
          // Serial.println(htmlResponse);           //Print request answer          

        } else {
          USE_SERIAL.printf("[HTTP] POST... failed, error: %s\n", http.errorToString(httpCode).c_str());
        }

        http.end();
      }
	  }

    delay(25000);
}
